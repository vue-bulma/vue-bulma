{
  "name": "vue-bulma",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@vue/cli-service": "^3.3.0",
    "bulma": "^0.7.2",
    "husky": "^1.3.1",
    "lerna": "^3.10.5",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.1",
    "sass-loader": "^7.1.0",
    "vue": "^2.5.22",
    "vue-template-compiler": "^2.5.22"
  },
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "dev": "cd packages/vue-bulma-examples ; vue-cli-service serve",
    "format": "prettier --write packages/**/**/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "*.png"
    ]
  },
  "dependencies": {
    "highlight.js": "^9.15.6",
    "vue-router": "^3.0.2"
  }
}
